
<form action = "/createprofile/save" method = "post">
<div class="row">
<div class="col-md-2"></div>
<div class="col-md-8">
<textarea name = "about" type = "text" placeholder="ABOUT"></textarea>
</div>
<div class="col-md-2"></div>
</div>
<div class="row">
<div class="col-md-2"></div>
<div class="col-md-8">
