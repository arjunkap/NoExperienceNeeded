<div class="container">
<% if @applications %>
<div>
        <h2>Applicant</h2>
    </div>
    <div class="border">
	<table width="500">
		<thead>
			<tr>
				<th>Applicant Name</th>
				<th>Question 1</th>
				<th>Question 2</th>
				<th>Question 3</th>
			</tr>
		</thead>
		<tbody>
	<% @applications.each do |application| %>
	<tr>
		<% seeker  = JobSeeker.find(application.job_seeker_id) %>
		<td><%= link_to seeker.user.first_name, {controller: "job_seekers", action: "show", id: seeker.id}, class:"link" %></td>
		<td><% application.question1 %></td>
		<td><% application.question2 %></td>
		<td><% application.question3 %></td>

	</tr>
	<% end %>
	</tbody>
	</table>
	</div>
<%end%>
</div>

<style type="text/css">

    @import url(https://fonts.googleapis.com/css?family=Oswald);
    @import url(https://fonts.googleapis.com/css?family=Roboto+Condensed);

    
    h2 {
    	padding-top:2%;
    	padding-bottom:2%;
        font-family: 'Oswald', sans-serif;
        text-align: center;
        text-transform: uppercase;
    }
    
    .border{
        border: 2px solid black;
        background-color: white;
        color: black;
        font-family: 'Oswald', sans-serif;
        width:80%;
        padding-left:2%;
        padding-top:3%;
        padding-bottom:3%;
        margin-left:10%;
        margin-bottom:3%;
    }
    
    .link {
        color: #35a192;
    }
    

</style>