
<div class="row">

  <div class="col-md-6 col-md-offset-3">
  <h1>New Job</h1>
    <% if @job.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@job.errors.count, "error") %>.
    </div>
    <ul>
    <% @job.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


    <%= form_for(@job) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>

      <%= f.label :city %>
      <%= f.text_field :city, class: 'form-control' %>


      <%= f.label :country %>
      <%= f.text_field :country, class: 'form-control' %>

      <%= f.submit "Post", class: "btn btn-primary" %>
    <% end %>

    <p class="submit"><%= link_to "Back", jobs_path %></p>
  </div>
</div>

<style type="text/css">
  #job_description{
    max-width: 100%;
  }
  p.submit{
    margin-top: 20px;
  }
</style>