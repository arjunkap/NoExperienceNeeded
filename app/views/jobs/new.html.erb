  <h1>New Job</h1>
    <% if @job.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@job.errors.count, "error") %>.
    </div>
    <ul>
    <% @job.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


    <%= form_for(@job) do |f| %>

    <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-4">
      <%= f.text_field :title, class: 'form-control new_job', placeholder: "Title" %>
    </div>
      
      <div class="col-md-4">
         <%= f.text_area :description, class: 'form-control new_job', placeholder: "Description" %>
      </div>
      <div class="col-md-2"></div>
          
  </div>

  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-4">
       <%= f.text_field :city, class: 'form-control new_job', placeholder: "city" %>
    </div>
      
      <div class="col-md-4">
      <%= f.text_field :country, class: 'form-control new_job',placeholder: "country"  %>
      </div>
      <div class="col-md-2"></div>
          
  </div>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-4">
       <%= f.text_field :question1, class: 'form-control new_job', placeholder: "question1" %>
    </div>
      
      <div class="col-md-4">
      <%= f.text_field :question2, class: 'form-control new_job', placeholder: "question2" %>
      </div>
      <div class="col-md-2"></div>
          
  </div>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-4">
       <%= f.text_field :question3, class: 'form-control new_job', placeholder: "question3" %>
    </div>
      
      <div class="col-md-4">
      
        <div id="datetimepicker1" class="input-append date">
    <input data-format="dd/MM/yyyy hh:mm:ss" type="text"></input>
    <span class="add-on">
      <i data-time-icon="icon-time" data-date-icon="icon-calendar">
      </i>
    </span>
  </div>
      <%= f.submit "Post", class: "btn btn-primary" %>
      </div>
      <div class="col-md-2"></div>
          
  </div>


    <% end %>

    <div class="row">
      <div class="col-md-2"></div>

      <div class="col-md-3">
        <%= link_to "Cancel", {controller: "employers", action: "show", id: current_user.company.id} , class: "btn btn-danger", id: "cancel_button" %>
      </div>
    </div>

    


<style type="text/css">
  #job_description{
    max-width: 100%;
  }
  p.submit{
    margin-top: 20px;
  }
  .form-control{
    width: 100%;
  }
    .new_job {
  width: 100%;
  margin-bottom: 15px;
  text-align: left;
  font-size: 25px;
  height: 40px;
}
h2{
  margin: 0 0;
}
.btn-primary{
  width: 100%;
  height: 40px;
}

</style>