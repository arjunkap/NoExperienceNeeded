<p id="notice"><%= notice %></p>
<% flash.each do |key, value| %>
  <%= content_tag :div, value, class: "flash #{key}" %>
<% end %>
<p>
  <strong>Title:</strong>
  <%= @job.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @job.description %>
</p>


<p>
  <strong>City:</strong>
  <%= @job.city %>
</p>

<p>
  <strong>County:</strong>
  <%= @job.country %>
</p>


<% if is_job_creator @job %>
<%=  link_to 'Edit', edit_job_path(@job), class: "btn btn-default" %> 

<%end%>


<% if logged_in? %>

<%=  link_to 'Apply',  {:controller => "jobs", :action => "apply", :job_id => @job.id } , class: "btn btn-default", remote: true %>
<% else %>

<% session[:current_job_application] = @job.id %>
<%= link_to "Sign in to apply", login_path%>

<%end%>

<div id="job_application">
	
</div>



<%= link_to 'Back', session[:current_uri], class: 'btn btn-default' %>