<% provide(:title, 'Sign up')%>


<div class="row user-type">
 <%= render 'shared/error_messages' %>

    <h2>Sign up</h2>

    <%= form_for(:user,  :url => url_for(:controller => "users", :action => session[:action])) do |f| %>
  
    <div class="form-group">
        <%= f.text_field :first_name , class: 'form-control registeration',:placeholder => "Name" %>
    </div>
  
    <div class="form-group">
      <%= f.email_field :email, class: 'form-control registeration',:placeholder => "Email" %>
    </div>
  
    <div class="form-group">

      <%= f.password_field :password, class: 'form-control registeration',:placeholder => "Password" %>
    </div>
    
     <div class="form-group">
      <%= f.password_field :password_confirmation, class: 'form-control registeration', :placeholder => "Password Confirmation" %>
    </div>
    
    <div class="form-group">

      <%= f.text_field :city, class: 'form-control registeration', :placeholder => "City" %>
    </div>
    
    
    <% if session[:action] == "create_employer" %>
        
    <div class="form-group">

      <input type="text" name="company_name", class='form-control registeration', placeholder="COMPANY" />
      </div>
     <div class="form-group">

      <input type="text" name="abn", class='form-control registeration', placeholder="ABN" />
      </div>
      <% end %>
      <div class="form-group">
      <%= f.submit "Create my account", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>


<style type="text/css">

  @import url(https://fonts.googleapis.com/css?family=Oswald);
  @import url(https://fonts.googleapis.com/css?family=Roboto+Condensed);

  .registeration {
  /*border: 1px solid #bbb;*/
  width: 100%;
  margin-bottom: 15px;
  text-align: left;
  font-size: 25px;
  height: 40px;
}
.btn-primary{
  width: 100%;
  height: 40px;
}

.user-type{
  max-width: 380px;
  padding: 15px 35px 45px;
  margin: 0 auto;
	font-family: 'Oswald', sans-serif;
	border-radius: 0;
	border: 4px solid black;
	background-color: white;
	/*color: black;*/
}

h2 {
  font-family: 'Oswald', sans-serif;
  text-transform: uppercase;
}

</style>