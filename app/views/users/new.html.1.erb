<% provide(:title, 'Sign up') %>


<div class="row">
  
  <h2>Sign up</h2>
  <%= render 'shared/error_messages' %>

    <%= form_for(:user,  :url => url_for(:controller => "users", :action => @action)) do |f| %>
  
    <div class="col-md-6">

      <%= f.text_field :first_name , class: 'form-control registeration',:placeholder => "First Name" %>
</div>
  
    <div class="col-md-6">
      <%= f.email_field :email, class: 'form-control registeration',:placeholder => "Email" %>
</div>
  
    <div class="col-md-6">

      <%= f.password_field :password, class: 'form-control registeration',:placeholder => "Password" %>
</div>
     <div class="col-md-6">
      <%= f.password_field :password_confirmation, class: 'form-control registeration', :placeholder => "Password Confirmation" %>
</div>
     <div class="col-md-6">

      <%= f.text_field :city, class: 'form-control registeration', :placeholder => "City" %>
      </div>
      <div class="col-md-6">

      <%= f.text_field :country, class: 'form-control registeration',:placeholder => "Country" %>
</div>
      <%#= f.label :city %>
      <%#= f.text_field :city , class: 'form-control registeration'%>

      <% if @company %>
        
 
     <div class="col-md-6">

      <input type="text" name="abn", class='form-control registeration', placeholder="ABN" />
      <% end %>
      </div>
      <div class="col-md-6"></div>
      <div class="col-md-6">
      <%= f.submit "Create my account", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>


<style type="text/css">
  .registeration {
  border: 1px solid #bbb;
  width: 100%;
  margin-bottom: 15px;
  text-align: left;
  font-size: 25px;
  height: 40px;
}
.btn-primary{
  width: 100%;
  height: 40px;
}

</style>