<% if @search_type == "comp_reviews" %>
   
     <div class = "search-heading"><h1 id = "search-heading">REVIEW SEARCH</h1></div>
        <div class = "left">
            <div id = "searchPanel">
               <h2>FILTER BY</h2>
               <form method="get" action="/search">
                <input type="hidden" name="search_from" value="refine_search" value='<%=session[:company]%>'></input>
                <div>
                   <label for "company">Company</label>
                    <input  type="text" name="company" placeholder="Company" value='<%=session[:company]%>' class="form-control" />
                </div>
                <br>
                <div>
                    <button type="submit" class="btn btn-primary" id = "refine">Refine</button>
                </div>
            </div>
        </div>
          </form>
          </div>
          </div>
          
<!--Centre div for formatting -->
<div class = "centre">
    <div id = "results">
        <div class = "content">  
        
        <!--Loop through each result from DB query, add it to table (for formatting) -->
        <% @reviews.each do |i| %>
        <br>
        <div class="item">
          <table>
            <tr>
              <td class = "resultTitle"><h1>"<%= link_to i.title , {controller: 'company_reviews', action: 'show', id: i.id } , class: "link"%>"</h1></td>
              <td class = "resultCompany"><h2><%= i.company_name %></h2></td>
            </tr>
              <td class = "resultDescription"><h3><%= i.description %></h3></td>
              <td class = "resultRating"><%= i.rating %></td>
             </tr>
         </table>
         <hr>
        </div>
        <%end%>
        </div>
    </div> 
    </div>
<div class = "right"></div>
<%end%>
