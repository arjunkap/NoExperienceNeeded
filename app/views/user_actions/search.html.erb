     <% if @search_type == "jobs" %>

    Jobs

            <label for="city">City</label>
          <select name="city" id="city">
          		<option value="any">Any</option>
               <% (Job.uniq_with_column :city).each do |city| %>
               		<option value='<%=city %>'><%= city %></option>

               <%end%>

            </select>
            </div>
                        <div class="form-control sidebar_div">
            <label for="sub_industry">Sub Industry</label>
              <select name="sub_industry" id="sub_industry">
              	<option value="any">Any</option>
               <% (SubIndustry.uniq_with_column :name).each do |si| %>
               		<option value='<%=si %>'><%= si %></option>
               <%end%>
            </select>
            </div>
            <div class="form-control sidebar_div">
            <label for="work_type">Work type</label>
               <select name="work_type" id="work_type">
              <option value="any">Any</option>
              <option value="FT">Full Time</option>
              <option value="PT">Part Time</option>
               <option value="CT">Casual</option>
              <option value="COT">Contract</option>
            </select>
            </div>
           	<br>
              <input type="hidden" name="search_from" value="refine_search"></input>


 <div class="form-control sidebar_div">
              <input  type="text" name="company" placeholder="company" value='<%=session[:company]%>'></input>
              </div>
              <br>
      
	<button type="submit" class="btn btn-default">Refine</button>

</form>

