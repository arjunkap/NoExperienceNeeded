<div class="content">
<% if @review %>

<h1><%= @review.title %></h1>
<div class="col-md-3 col-md-offset-1">
  <h3><strong>Company:</strong><%= @review.company_name %></h3>
</div>
<div class="col-md-7">
	  
	<div><strong>Description:</strong><p><%= @review.description %></p></p></div>
	<div>Create date:<%= @review.created_at %></div>
     </div>
<%end%>

<br>
<br>
<%= link_to 'Back', session[:current_uri], class: 'btn btn-default' %>

</div>

<style type="text/css">
  .content{
    margin-left: 10%;
   
    margin-top: 6%;
  }
  .btn-primary{ 
    width: 25%;
  }
  h3{
    font-size: 30px;
  }
</style>
