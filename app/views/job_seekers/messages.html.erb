<% if @messages %>
<div>
        <h2>My Messages</h2>
    </div>
    <div class="border">
	<% @messages.each do |message| %>
	<h4>Congrutulations you have made to interview steps for this job</h4>
	<% job = Job.find(message.job_id) %>
		<table>
			<tr>
				<%= message.message %>
			</tr>
			<tr><%= link_to Job.title,job ,class:"link" %>	 </tr>
		</table>
	<% end %>
	</div>
<%end%>

