<form action="/profile/saveportfolioitem", method = "post" class="col-md-8">

	<input name="authenticity_token" value='<%= form_authenticity_token %>' type="hidden">
	<div class="form-group">
		<label>Title</label><br>
		<input type ="text" name = "title">
	</div>


	Type:
	<br>
	<select name ="itemType">
	  <option value="Work Experience">Work Experience</option>
	  <option value="Project">Project</option>
	  <option value="Research Paper">Research</option>
	  <option value="Extra-Curricular">Extra-curricular</option>
	  <option value="Volunteer">Volunteer</option>
	  <option value="Award">Award</option>
	</select>
	<br>

	Description:
	<br> 
	<textarea type = "textarea" rows = "5" cols = "30" name = "description" placeholder="Description goes here"></textarea>
	<br>

	URL:
	<br>
	<input type = "url" name = "url" >
	<br>

	<button>Save</button>

</form>