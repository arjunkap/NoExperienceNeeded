<% if @user.errors.count > 0 or (@company and @company.errors.count > 0) %>
<div class="alert alert-danger">
<ul>
<% if @user.errors.any? %>

  
      The form contains <%= pluralize(@user.errors.count, "error") %>.

    <% @user.errors.full_messages.each do |msg| %>
  
       <li><%= msg %></li>  
 
    <% end %>
<% @company.errors.full_messages.each do |msg| %>
  
       <li><%= msg %></li>  
 
    <% end %>


      </ul>
      <% end %>
  </div>

<% end %>


<style type="text/css">
	#error_explanation {
  color: red;
  .alert {
    color: red;
    margin: 0 0 5%: 0;
  }
}

.field_with_errors {
  @extend .has-error;
  .form-control {
    color: $state-danger-text;
  }
}

</style>