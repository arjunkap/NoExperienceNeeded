<div class="container">

  <div class="row">
  
  <div class="col-md-10">
    <div class="row">
      <h2>Your active jobs</h2>
    </div>

  
  	<div id="active_jobs">
  		<% if @active_jobs %>
      <p id="notice"><%= notice %></p>
  
  
      <table width="100%" class="table table-hover">
      <!--   <thead>
          <tr>
            <th>Title</th>
            <th></th>
            <th></th>

            <th colspan="3"></th>
          </tr>
        </thead>
       -->
        <tbody>
          <% @active_jobs.each do |job| %>
            <tr >
              <td ><%= job.title  %></td>
              <td><%= link_to 'Show', job, class: "btn btn-primary" %></td>
              <td><%= link_to 'Applications', {controller: "jobs", action: "applications", id: job.id}, class: "btn btn-info" %></td>
              <td><%= link_to 'Edit', edit_job_path(job), class: 'btn btn-info' %></td>
              <td><%= link_to 'Destroy',  job, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
            </tr>

          <% end %>
        </tbody>
      </table>
  
  		<%end%>
  	</div> 
    <div class="createJob">
      <%= link_to "Create Job", new_job_path, id: "new", class: "btn btn-primary" %>
    </div>
  
  
  </div>
    
  </div>
</div>

<style type="text/css">
    @import url(https://fonts.googleapis.com/css?family=Oswald);
    @import url(https://fonts.googleapis.com/css?family=Roboto+Condensed);

    h2 {
      font-family: 'Oswald', sans-serif;
      text-transform: uppercase;
    }
    
    table {
        border: 2px solid black;
        background-color: white;
        color: black;
    }

    #new {
      width:50%;
      margin-left:25%;
      
    }
    
    .createJob {
      margin-top:5%;
    }
  
</style>