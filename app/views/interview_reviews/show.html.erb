<div class="content">

<% if @interview %>
	<br>
	

	<h3><%= @interview.title %></h3>
	<hr>
	<p> <strong>Company:</strong> <%= @interview.company_name %> </p>
	
	<p><strong>Description:</strong><%= @interview.description %></p>
	
	<p id="total_votes">Total ratings : <%= @total_votes %> </p>



<div id="upvoted_message"></div>

<% if is_current_user_job_seeker? and can_upvote? @interview.id %>

<div id="active_button"></div>
<%= link_to "Upvote", {controller: 'interview_reviews', action: 'upvote', id: @interview.id}, id: "upvote_button",  class: "btn btn-default", remote: true %>

<%else%>
	
<%= link_to "Upvoted", '#',  class: "btn btn-default", disabled: true %>

<%end%>
<br> <br>
<%= link_to 'Back', session[:current_uri], class: 'btn btn-default' %>
<%end%>

</div>


<style type="text/css">
  .content{
    margin-left: 10%;
   
    margin-top: 6%;
    margin-right: 10%;

  }
  .btn-primary{ 
    width: 25%;
  }
  h3{
    font-size: 30px;
  }
  p#total_votes{
  	float: right;
  }

</style>